{
  "name": "terminal-auto-reopen",
  "displayName": "Terminal Auto-reopen",
  "description": "Automatically reopens a terminal when the last one is closed",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/riordanmb/terminal-auto-reopen.git"
  },
  "publisher": "michael-riordan",
  "engines": {
    "vscode": "^1.80.0"
  },
  "license": "MIT",
  "keywords": [
    "terminal",
    "auto-reopen",
    "integrated terminal",
    "terminal auto reopen",
    "terminal history",
    "terminal state",
    "terminal commandtracking"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminal-auto-reopen.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
