{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ES2020"],
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "include": [
        "src"
    ]
}